<Window x:Class="DigitalMarkingAnalyzer.LogConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Log console" Height="300" Width="600">
    <Grid Background="#FF000128">
        <Button x:Name="ClearConsoleButton" Content="Clear" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="18" Margin="1,1,1,1" FontSize="10" Click="ClearConsoleButton_Click"/>
        <ScrollViewer Name="Scroller" Margin="0,20,0,0" Background="#FF000128">
            <TextBlock Name="OutputBlock" Foreground="White" FontFamily="Consolas" Padding="10" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Window>
