<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" x:Class="DigitalMarkingAnalyzer.MainWindow"
        mc:Ignorable="d"
        Title="Watermark Analyzer" Height="700" Width="850">
    <Grid>
        <Grid>
            <TabControl x:Name="Tabs">
                <TabItem Header="Main" x:Name="MainTab">
                    <Grid Background="#FFE5E5E5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid Background="#FFE5E5E5" Width="425" Height="500" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label Content="Original" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Top" Height="50" Width="400" FontSize="24"/>
                            <Button x:Name="BrowseOriginalButton" Content="Browse" HorizontalAlignment="Center" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="30" Width="100" Click="BrowseOriginalButton_Click"/>
                            <Image x:Name="OriginalImage" HorizontalAlignment="Left" Height="400" Margin="10,50,0,0" VerticalAlignment="Top" Width="400" Stretch="Fill"/>
                        </Grid>
                        <Grid Background="#FFE5E5E5" Width="425" Height="500" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Label Content="Watermark" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,10,0" VerticalAlignment="Top" Height="50" Width="400" FontSize="24"/>
                            <Button x:Name="BrowseWatermarkButton" Content="Browse" HorizontalAlignment="Center" Margin="10,0,10,10" VerticalAlignment="Bottom" Height="30" Width="100" Click="BrowseWatermarkButton_Click"/>
                            <Image x:Name="WatermarkImage" HorizontalAlignment="Right" Height="400" Margin="0,50,10,0" VerticalAlignment="Top" Width="400" Stretch="Fill"/>
                        </Grid>
                        <Grid Background="#FFE5E5E5" Height="100" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                            <ComboBox x:Name="AlgorithmBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" IsEditable="False" Text="LSB" SelectedIndex="0" >
                                <System:String>LSB</System:String>
                                <System:String>PixelAveraging</System:String>
                            </ComboBox>
                            <Label Content="Bits for watermark" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="150,10,0,0" VerticalAlignment="Top" Height="30" Width="120" FontSize="12"/>
                            <TextBox x:Name="BitsForWatermarkTextBox" Text="2" TextAlignment="Right" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="280,10,0,0" VerticalAlignment="Top" Height="30" Width="30" FontSize="12"/>
                            <Button x:Name="Process" Content="Process" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="50" Width="100" Click="ProcessButton_Click"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Result" x:Name="ResultTab">
                    <ScrollViewer x:Name="Scroller" Background="#FF000128">
                        <Grid Background="#FFE5E5E5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid Background="#FFE5E5E5" Grid.Column="0" Grid.Row="0">
                                <Label Content="Watermarked" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Top" Height="50" Width="400" FontSize="24"/>
                                <Button x:Name="SaveWatermarkedButton" Content="Save" HorizontalAlignment="Center" Margin="0,460,0,0" Height="30" Width="100" Click="SaveWatermarkedButton_Click"/>
                                <Image x:Name="WatermarkedImage" HorizontalAlignment="Left" Height="400" Margin="10,50,0,0" VerticalAlignment="Top" Width="400" Source="/DigitalMarkingAnalyzer;component/Resources/t_corgi_tekst_dolny.jpg" Stretch="Fill"/>
                            </Grid>
                            <Grid Background="#FFE5E5E5" Grid.Column="1" Grid.Row="0">
                                <Label Content="Cleaned" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,10,0" VerticalAlignment="Top" Height="50" Width="400" FontSize="24"/>
                                <Button x:Name="SaveCleanedButton" Content="Save" HorizontalAlignment="Center" Margin="0,460,0,0" Height="30" Width="100" Click="SaveCleanedButton_Click"/>
                                <Image x:Name="CleanedImage" HorizontalAlignment="Right" Height="400" Margin="0,50,10,0" VerticalAlignment="Top" Width="400" Source="/DigitalMarkingAnalyzer;component/Resources/r_corgi_tekst_dolny.jpg" Stretch="Fill"/>
                            </Grid>
                            <Grid Background="#FFE5E5E5" Grid.Column="0" Grid.Row="1">
                                <Label Content="Extracted Watermark" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,10,0" VerticalAlignment="Top" Height="50" Width="400" FontSize="24"/>
                                <Button x:Name="SaveExtractedWatermarkButton" Content="Save" HorizontalAlignment="Center" Margin="0,460,0,0" Height="30" Width="100" Click="SaveExtractedWatermarkButton_Click"/>
                                <Image x:Name="ExtractedWatermarkImage" HorizontalAlignment="Right" Height="400" Margin="0,50,10,0" VerticalAlignment="Top" Width="400" Source="/DigitalMarkingAnalyzer;component/Resources/w_tekst_dolny.png" Stretch="Fill"/>
                            </Grid>
                            <Button x:Name="Close" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Content="Close" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10" Height="50" Width="100" Click="CloseResultTabButton_Click"/>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
